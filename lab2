import math

# Завдання 1
print("Завдання 1: Площі трьох прямокутників")
for i in range(1, 4):
    a = float(input(f"\nВведіть першу сторону прямокутника {i}: "))
    b = float(input(f"Введіть другу сторону прямокутника {i}: "))
    area = a * b
    print(f"Площа прямокутника {i}: {area}")

# Завдання 2
print("\nЗавдання 2: Порівняння гіпотенуз двох прямокутних трикутників")

def hypotenuse(a, b):
    return math.sqrt(a**2 + b**2)

# Перший трикутник
a1 = float(input("\nВведіть перший катет першого трикутника: "))
b1 = float(input("Введіть другий катет першого трикутника: "))
hyp1 = hypotenuse(a1, b1)

# Другий трикутник
a2 = float(input("\nВведіть перший катет другого трикутника: "))
b2 = float(input("Введіть другий катет другого трикутника: "))
hyp2 = hypotenuse(a2, b2)

print(f"\nГіпотенуза першого трикутника: {hyp1}")
print(f"Гіпотенуза другого трикутника: {hyp2}")

if hyp1 > hyp2:
    print("Гіпотенуза першого трикутника більша.")
elif hyp1 < hyp2:
    print("Гіпотенуза другого трикутника більша.")
else:
    print("Гіпотенузи однакові.")

# Завдання 3
print("\nЗавдання 3: Кількість точок, що лежать всередині кола")

def is_inside_circle(x, y, a, b, R):
    return (x - a)**2 + (y - b)**2 < R**2

# Введення параметрів кола
a = float(input("\nВведіть координату a центру кола: "))
b = float(input("Введіть координату b центру кола: "))
R = float(input("Введіть радіус R кола: "))

# Введення координат точок
p1 = float(input("\nВведіть координату p1 точки P: "))
p2 = float(input("Введіть координату p2 точки P: "))

f1 = float(input("\nВведіть координату f1 точки F: "))
f2 = float(input("Введіть координату f2 точки F: "))

l1 = float(input("\nВведіть координату l1 точки L: "))
l2 = float(input("Введіть координату l2 точки L: "))

# Перевірка точок
count = 0
if is_inside_circle(p1, p2, a, b, R):
    count += 1
if is_inside_circle(f1, f2, a, b, R):
    count += 1
if is_inside_circle(l1, l2, a, b, R):
    count += 1

print(f"\nКількість точок, що лежать всередині кола: {count}")

# Завдання 4
print("\nЗавдання 4: Площа чотирикутника з прямим кутом між X і Y")

X = float(input("\nВведіть довжину сторони X: "))
Y = float(input("Введіть довжину сторони Y: "))
Z = float(input("Введіть довжину сторони Z: "))
T = float(input("Введіть довжину сторони T: "))

# Площа прямокутника + площа трикутника (припустимо довільна форма чотирикутника з прямим кутом між X і Y)
area_quad = X * Y + 0.5 * Z * T

print(f"\nПлоща чотирикутника: {area_quad}")

# Завдання 5
print("\nЗавдання 5: Натуральні числа, що діляться на всі задані числа")

n = int(input("\nВведіть значення n: "))
nums = list(map(int, input("Введіть числа через пробіл, на які повинні ділитися результати: ").split()))

# Перевіряємо всі числа від 1 до n
result = []
for i in range(1, n + 1):
    if all(i % num == 0 for num in nums):
        result.append(i)

print(f"\nЧисла, що не перевищують {n} і діляться на кожне з {nums}:")
print(result)
